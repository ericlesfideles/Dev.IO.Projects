@model Dev.IO.App.ViewModels.SupplierViewModel
@using Dev.IO.App.Extensions

@{
    ViewData["Title"] = "Excluir" + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Document)
        </dt>
        <dd class="col-sm-10">
            @this.FormatDocument(Model.SupplierType, Model.Document)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>

    <div>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Excluir</a>
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </div>

    <partial name="_AndressDetails" />
</div>

